<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.amu.iut.earthquakeapp.controllers.TournoiController">
    <top>
        <Label text="Tournament Mode" style="-fx-font-size: 24px;" BorderPane.alignment="CENTER"/>
    </top>
    <center>
        <VBox >
            <TableView fx:id="tournamentTable">
                <columns>
                    <TableColumn text="Player 1" fx:id="player1Column"/>
                    <TableColumn text="Player 2" fx:id="player2Column"/>
                    <TableColumn text="Result" fx:id="resultColumn"/>
                </columns>
            </TableView>
        </VBox>
    </center>
    <bottom>
        <Button text="Back to Main Menu"  BorderPane.alignment="CENTER"/>
    </bottom>
</BorderPane>

