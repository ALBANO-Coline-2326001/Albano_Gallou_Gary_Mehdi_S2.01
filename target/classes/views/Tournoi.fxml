<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.amu.iut.earthquakeapp.controllers.TournoiController" stylesheets="@../css/stylesTournoi.css">
    <top>
        <Label  styleClass="label" text="Tournament Mode" style="-fx-font-size: 24px;" BorderPane.alignment="CENTER"/>
    </top>
    <center>
        <VBox fx:id="tournoisBox" styleClass="tournoisBox" >
            <TableView fx:id="tournamentTable" styleClass="tournois" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn text="Player 1" fx:id="player1Column"/>
                    <TableColumn text="Player 2" fx:id="player2Column"/>
                    <TableColumn text="Result" fx:id="resultColumn"/>
                </columns>
            </TableView>
        </VBox>
    </center>
    <bottom>
        <Button text="Back to Main Menu" BorderPane.alignment="CENTER" onAction="#handleBackToMenu" styleClass="buttonPlay"/>
    </bottom>
</BorderPane>
